While loop

================
function PrintPattern(int numOfTerms)
  initialise i=1
	while i <= numOfTerms
		   initialise j =numOfTerms ;
           while j > 0 
          print a blank space
           j -- 
		       end while j
		    initialise k =numOfTerms
            while k>numOfTerm-i
            print k;
            k--;
		        end while k
	      move to next line
        i++;
	end while i

function TestPrintPattern()

	INPUT numberOfTerms
	
	PrintPattern(numOfTerms)
=====================================================================

using System;

namespace Series
{
    internal class Program
    {
        static void PrintPattern(int numOfTerms)
        {
            int i = 1;
            while(i <= numOfTerms)
            {
                int j = numOfTerms - i;
                while( j > 0)
                {
                    Console.Write("  ");
                    j--;
                }
                int k = numOfTerms;
                while (k > numOfTerms - i)
                {
                    Console.Write(k + " ");
                    k--;    
                }
                // Move to the next line
                Console.WriteLine();
                i++;    
            }
        }

        static void TestPrintPattern()
        {
            Console.Write("Enter number of terms: ");
            int numOfTerms = int.Parse(Console.ReadLine());
            PrintPattern(numOfTerms);
            Console.WriteLine();
        }

        static void Main(string[] args)
        {
            Console.WriteLine("--------------------Print Pattern-----------------");
            TestPrintPattern();
            Console.WriteLine("--------------------End Pattern-----------------");
            Console.WriteLine("Press any key to continue");
            Console.ReadKey();
        }
    }
}


