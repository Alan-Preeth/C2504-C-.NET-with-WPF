        5
      5 4
    5 4 3
  5 4 3 2
5 4 3 2 1      


For loop
-----------------------------

Pseudocode

function PrintPattern(int numOfTerms)

	for i =1 to numOfTerms
		for j =numOfTerms ; j > 0 ;j -- //to print spaces in front
			print blank space;
		end for j
		for k =numOfTerms ; k > numOfTerms-i ; k++
			print k;
		end for k
	move to next line
	end for i

function TestPrintPattern()

	INPUT numberOfTerms
	
	PrintPattern(numOfTerms)
================================================

using System;

namespace Series
{
    internal class Program
    {
        static void PrintPattern(int numOfTerms)
        {
            for (int i = 1; i <= numOfTerms; i++)
            {   
               
                for (int j = numOfTerms - i; j > 0; j--)
                {
                    Console.Write("  ");
                }
                
                for (int k = numOfTerms; k > numOfTerms - i; k--)
                {
                    Console.Write(k + " ");
                }
               
                Console.WriteLine();
            }
        }

        static void TestPrintPattern()
        {
            Console.Write("Enter number of terms: ");
            int numOfTerms = int.Parse(Console.ReadLine());
            PrintPattern(numOfTerms);
            Console.WriteLine();
        }

        static void Main(string[] args)
        {
            Console.WriteLine("--------------------Print Pattern-----------------");
            TestPrintPattern();
            Console.WriteLine("--------------------End Pattern-----------------");
            Console.WriteLine("Press any key to continue");
            Console.ReadKey();
        }
    }
}


