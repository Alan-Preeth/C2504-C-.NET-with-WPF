ReadAndFindMinSalaryOfNDoctors() without array

----------------------------------------------------
Pseudocode:
function FindMinSalary():
    MinSalary = salary of first doctor// read salary of first doctor
    for I = 2 .. size 
        Input salary
        
        if salary < MinSalary then 
            MinSalary = salary
        end if 



--------------------------------------------------------------
using System;

class FindMinSalaryOfDoctor
{
 

    static int FindMinSalary(int size)
    {
        Console.Write($"Salary of 1st Doctor: ");
        int min = int.Parse(Console.ReadLine());
        
        for (int I = 1; I < size; I++)
        {
            Console.Write($"Salary of {I+1}th Doctor: ");
            int salary = int.Parse(Console.ReadLine());
            if (salary < min)
            {
                min = salary;
            }
        }
        return min;
    }

    static void TestCountMin6DigitsSalariedDoctors()
    {
        Console.Write("Number of Doctors: ");
        int size = int.Parse(Console.ReadLine());
        Console.WriteLine("Enter one by one doctors' salaries.");
        int minSalary = FindMinSalary(size);
        Console.WriteLine($"Minimun salary is: {minSalary}");
    }

    static void Main(string[] args)
    {
        Console.WriteLine("------------------------TestCountMin6DigitsSalariedDoctors------------------------------");
        TestCountMin6DigitsSalariedDoctors();
        Console.WriteLine("------------------------End TestCountMin6DigitsSalariedDoctors------------------------------");
        Console.WriteLine("Press any key to continue...");
        Console.ReadKey();
    }
}

