code:

using System;

 class Program
{
    // Function to check if the doctor's salary is at least 6 digits
    public static bool IsDoctorSalaryMin6Digit(int doctorSalary)
    {
        return doctorSalary >= 100000;
    }

    // Function to test if the doctor's salary is 6 digits and print the result
    public static void TestIsDoctorSalary6Digit()
    {
        // Input doctorSalary
        Console.Write("Enter the doctor's salary: ");
        int doctorSalary=int.Parse(Console.ReadLine());
       
            if (IsDoctorSalaryMin6Digit(doctorSalary))
            {
                Console.WriteLine("Doctor has a 6 digit salary");
            }
            
    }

    // Main function to run the test
    public static void Main()
    {
        TestIsDoctorSalary6Digit();
    }
}




