3-Discount calculator


CalculateTotalCost(shoppingCart, discountThreshold, discountRate)
    Initilaise totalCost = 0

    FOR EACH item IN shoppingCart
        totalCost <- totalCost + item.price * item.quantity
    END FOR

    IF totalCost > discountThreshold THEN
        discount <- totalCost * discountRate
        totalCost <- totalCost - discount
    END IF

    RETURN totalCost
END FUNCTION

Input an array shopping cart
shoppingCart = that contains item price and quantity


int discountlimit =50 
double discountRate = 0.10 
double totalCost = CalculateTotalCost(shoppingCart, discountThreshold, discountRate)
PRINT "Total Cost: " + totalCost

END


